<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutOneInvoiceItem_InvoiceItem"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="100sp"
    android:paddingTop="10sp"
    android:paddingBottom="10sp"
    android:paddingLeft="10sp"
    android:paddingRight="20sp"
    android:background="@color/colorMySoftGray">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1">

        <TextView
            android:id="@+id/txtInvoiceNumber_InvoiceItem"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="2824446"
            android:textSize="16sp"
            android:textColor="@color/colorMyBlack"
            android:textStyle="bold"
            android:gravity="left|center"/>

        <TextView
            android:id="@+id/txtInvoiceDate_InvoiceItem"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="00-00-0000"
            android:textSize="12sp"
            android:textColor="@color/colorMyBlack"
            android:gravity="right|center"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="left|center"
            android:text="Total:"
            android:textColor="@color/colorMyBlack"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txtAmount_InvoiceItem"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="$0.00"
            android:textSize="16sp"
            android:textColor="@color/colorMyBlack"
            android:gravity="right|center" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Status:"
            android:textSize="14sp"
            android:textColor="@color/colorMyBlack"
            android:gravity="left|center"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/txtStatus_InvoiceItem"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Null"
            android:textSize="14sp"
            android:textColor="@color/colorMyBlack"
            android:gravity="right|center"/>

    </LinearLayout>

</LinearLayout>