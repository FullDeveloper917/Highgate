<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_Result_Detail"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@color/colorMyWhite"
    android:orientation="vertical"
    android:weightSum="100">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_marginTop="10sp"
        android:layout_weight="50"
        android:weightSum="100">

        <ImageView
            android:id="@+id/imgProduct_Result"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="45"
            android:padding="10dp"/>

        <LinearLayout
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="55"
            android:background="@color/colorMySoftGray"
            android:orientation="vertical"
            android:paddingBottom="10sp"
            android:paddingLeft="20sp"
            android:paddingRight="10sp"
            android:paddingTop="10sp">


            <TextView
                android:id="@+id/txtDesc_Result"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:lineSpacingMultiplier="1.2"
                android:layout_weight="1"
                android:text="COMPRESSOR"
                android:textColor="@color/colorMyBlack"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/txtPart_Result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5sp"
                android:text="PART N&#xb0;: "
                android:textColor="@color/colorMyBlack"
                android:textSize="11sp" />


        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="50"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:background="@color/colorMyGray"
            android:layout_weight="45"
            android:paddingLeft="20sp"
            android:paddingTop="7sp"
            android:paddingRight="10sp"
            android:paddingBottom="7sp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="your price +gst (ea):"
                android:textAllCaps="true"
                android:textSize="12sp"
                android:layout_marginBottom="5sp"
                android:textColor="@color/colorMyBlack"/>

            <TextView
                android:id="@+id/txtPrice_Result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="$0"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/colorMyGreen"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:weightSum="99">

                <Button
                    android:id="@+id/btnMinus"
                    style="@android:style/Widget.DeviceDefault.Button.Borderless"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="33"
                    android:background="@color/colorMyMain"
                    android:textColor="@color/colorMyWhite"
                    android:text="-"
                    android:textSize="24sp"/>

                <TextView
                    android:id="@+id/txtNum_Result"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="33"
                    android:background="@color/colorMyWhite"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/colorMyBlack"
                    android:text="0"
                    android:textSize="24sp"/>

                <Button
                    android:id="@+id/btnPlus"
                    style="@android:style/Widget.DeviceDefault.Button.Borderless"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="33"
                    android:background="@color/colorMyMain"
                    android:textColor="@color/colorMyWhite"
                    android:text="+"
                    android:textSize="24sp"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="55"
            android:background="@color/colorMyGray"
            android:paddingLeft="20sp"
            android:paddingRight="10sp"
            android:paddingTop="7sp"
            android:paddingBottom="7sp"
            android:weightSum="100">

            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="75"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical"
                    android:text="TOTAL"
                    android:textColor="@color/colorMyBlack"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/txtTotalPrice_Result"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="left|center_vertical"
                    android:text="$0"
                    android:textColor="@color/colorMyBlack"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical"
                    android:text="+GST &amp; DELIVERY"
                    android:textColor="@color/colorMyBlack"
                    android:paddingBottom="5sp"
                    android:textSize="14sp" />
            </LinearLayout>

            <Button
                android:id="@+id/btnTrash_Result"
                style="@android:style/Widget.DeviceDefault.Button.Borderless"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:text="@string/fa_trash"
                android:textColor="@color/colorMyBlack"
                android:textSize="32sp"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
