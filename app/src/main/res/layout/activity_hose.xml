<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.highgate.highgate.HoseActivity">

    <LinearLayout
        android:id="@+id/layout_Hose"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="@color/colorMyBlack"
        android:weightSum="100"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:id="@+id/menu_pos"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8">
            <include layout="@layout/menubar" />
        </LinearLayout>

        <android.support.v4.widget.DrawerLayout
            android:id="@+id/layoutDrawer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="92">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="92">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0sp"
                    android:layout_weight="8"
                    android:background="@color/colorMyMain"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnRtn_Hose"
                        style="@android:style/Widget.DeviceDefault.Button.Borderless"
                        android:layout_width="50sp"
                        android:layout_height="match_parent"
                        android:background="@color/colorMyMain"
                        android:text="@string/fa_caret_left"
                        android:padding="0sp"
                        android:textColor="@color/colorMyBlack"
                        android:textSize="48sp" />

                    <TextView
                        android:id="@+id/txtRtn_Hose"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@color/colorMyMain"
                        android:gravity="center"
                        android:paddingRight="10sp"
                        android:text="@string/fa_compress"
                        android:textColor="@color/colorMyWhite"
                        android:textSize="28sp" />

                    <TextView
                        android:id="@+id/txtHoseTitle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="left|center_vertical"
                        android:background="@color/colorMyMain"
                        android:text="HOSE FITTING GUIDE"
                        android:textStyle="bold"
                        android:textColor="@color/colorMyWhite"
                        android:textSize="18sp" />

                </LinearLayout>

                <android.support.v4.widget.DrawerLayout
                    android:id="@+id/layoutMain_Hose"
                    android:layout_width="match_parent"
                    android:layout_height="0sp"
                    android:layout_weight="84">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="84"
                        android:orientation="vertical"
                        android:weightSum="84">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0sp"
                            android:layout_weight="6"
                            android:weightSum="100">

                            <Button
                                android:id="@+id/btnSelectFittingType"
                                style="@android:style/Widget.DeviceDefault.Button.Borderless"
                                android:layout_width="0sp"
                                android:layout_height="match_parent"
                                android:background="@color/colorMyGray"
                                android:textAllCaps="false"
                                android:text="@string/hose_menu_1"
                                android:gravity="left|center_vertical"
                                android:paddingLeft="20sp"
                                android:textColor="@color/colorMyBlack"
                                android:layout_weight="50"/>

                            <Button
                                android:id="@+id/btnSelectHoseType"
                                style="@android:style/Widget.DeviceDefault.Button.Borderless"
                                android:layout_width="0sp"
                                android:layout_height="match_parent"
                                android:background="@color/colorMySoftGray"
                                android:textAllCaps="false"
                                android:text="@string/hose_menu_2"
                                android:gravity="left|center_vertical"
                                android:paddingLeft="20sp"
                                android:textColor="@color/colorMyDarkGray"
                                android:layout_weight="50"/>
                        </LinearLayout>

                        <android.support.v4.widget.DrawerLayout
                            android:id="@+id/layoutDrawer_Hose1"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="78">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:weightSum="78">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0sp"
                                    android:layout_weight="6">

                                    <Button
                                        android:id="@+id/btnSelectAngle"
                                        style="@android:style/Widget.DeviceDefault.Button.Borderless"
                                        android:layout_width="0sp"
                                        android:layout_height="match_parent"
                                        android:background="@color/colorMySoftGray"
                                        android:textAllCaps="false"
                                        android:text="@string/hose_menu_3"
                                        android:gravity="left|center_vertical"
                                        android:paddingLeft="20sp"
                                        android:textColor="@color/colorMyDarkGray"
                                        android:layout_weight="50"/>

                                    <Button
                                        android:id="@+id/btnSelectFittingSize"
                                        style="@android:style/Widget.DeviceDefault.Button.Borderless"
                                        android:layout_width="0sp"
                                        android:layout_height="match_parent"
                                        android:background="@color/colorMySoftGray"
                                        android:textAllCaps="false"
                                        android:text="@string/hose_menu_4"
                                        android:gravity="left|center_vertical"
                                        android:paddingLeft="20sp"
                                        android:textColor="@color/colorMyDarkGray"
                                        android:layout_weight="50"/>
                                </LinearLayout>

                                <android.support.v4.widget.DrawerLayout
                                    android:id="@+id/layoutDrawer_Hose2"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="72">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical"
                                        android:weightSum="72">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="0sp"
                                            android:layout_weight="6">

                                            <Button
                                                android:id="@+id/btnSelectHoseSize"
                                                style="@android:style/Widget.DeviceDefault.Button.Borderless"
                                                android:layout_width="0sp"
                                                android:layout_height="match_parent"
                                                android:background="@color/colorMySoftGray"
                                                android:textAllCaps="false"
                                                android:text="@string/hose_menu_5"
                                                android:gravity="left|center_vertical"
                                                android:paddingLeft="20sp"
                                                android:textColor="@color/colorMyDarkGray"
                                                android:layout_weight="50"/>

                                            <Button
                                                android:id="@+id/btnAdditionalOptions"
                                                style="@android:style/Widget.DeviceDefault.Button.Borderless"
                                                android:layout_width="0sp"
                                                android:layout_height="match_parent"
                                                android:background="@color/colorMySoftGray"
                                                android:text="@string/hose_menu_6"
                                                android:gravity="left|center_vertical"
                                                android:paddingLeft="20sp"
                                                android:textAllCaps="false"
                                                android:textColor="@color/colorMyDarkGray"
                                                android:layout_weight="50"/>
                                        </LinearLayout>

                                        <android.support.v4.widget.DrawerLayout
                                            android:id="@+id/layoutDrawer_Hose3"
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp"
                                            android:layout_weight="66">

                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:orientation="vertical"
                                                android:weightSum="66">

                                                <LinearLayout
                                                    android:layout_width="match_parent"
                                                    android:layout_height="0sp"
                                                    android:layout_weight="6">

                                                    <Button
                                                        android:id="@+id/btnSelectMaterial"
                                                        style="@android:style/Widget.DeviceDefault.Button.Borderless"
                                                        android:layout_width="0sp"
                                                        android:layout_height="match_parent"
                                                        android:background="@color/colorMySoftGray"
                                                        android:textAllCaps="false"
                                                        android:text="@string/hose_menu_7"
                                                        android:gravity="left|center_vertical"
                                                        android:paddingLeft="20sp"
                                                        android:textColor="@color/colorMyDarkGray"
                                                        android:layout_weight="50"/>

                                                    <Button
                                                        android:id="@+id/btnSelectAccess"
                                                        style="@android:style/Widget.DeviceDefault.Button.Borderless"
                                                        android:layout_width="0sp"
                                                        android:layout_height="match_parent"
                                                        android:background="@color/colorMySoftGray"
                                                        android:gravity="left|center_vertical"
                                                        android:paddingLeft="20sp"
                                                        android:textAllCaps="false"
                                                        android:text="@string/hose_menu_8"
                                                        android:textColor="@color/colorMyDarkGray"
                                                        android:layout_weight="50"/>
                                                </LinearLayout>

                                                <android.support.v4.widget.DrawerLayout
                                                    android:id="@+id/layoutDrawer_Hose4"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="0dp"
                                                    android:layout_weight="60">

                                                    <RelativeLayout
                                                        android:layout_width="match_parent"
                                                        android:layout_height="match_parent">

                                                        <TextView
                                                            android:id="@+id/txtIntroduct_Hose"
                                                            android:layout_width="match_parent"
                                                            android:layout_height="match_parent"
                                                            android:text="@string/hose_introduction"
                                                            android:lineSpacingMultiplier="1.2"
                                                            android:textSize="16sp"
                                                            android:textColor="@color/colorMyBlack"
                                                            android:background="@color/colorMyWhite"
                                                            android:paddingTop="50sp"
                                                            android:paddingLeft="30sp"
                                                            android:paddingRight="30sp"/>

                                                        <LinearLayout
                                                            android:id="@+id/layoutHoseContent"
                                                            android:layout_width="match_parent"
                                                            android:layout_height="match_parent"
                                                            android:orientation="vertical"
                                                            android:visibility="gone">

                                                            <LinearLayout
                                                                android:layout_width="match_parent"
                                                                android:layout_height="32sp">

                                                                <TextView
                                                                    android:id="@+id/txtClearHose"
                                                                    android:layout_width="50dp"
                                                                    android:layout_height="match_parent"
                                                                    android:background="@color/colorMyMain"
                                                                    android:gravity="right|center_vertical"
                                                                    android:paddingRight="5sp"
                                                                    android:text="@string/fa_times_circle"
                                                                    android:textColor="@color/colorMyWhite"
                                                                    android:textSize="24sp" />

                                                                <Button
                                                                    android:id="@+id/btnClearHose"
                                                                    style="@android:style/Widget.DeviceDefault.Button.Borderless"
                                                                    android:layout_width="match_parent"
                                                                    android:layout_height="match_parent"
                                                                    android:layout_weight="6"
                                                                    android:background="@color/colorMyMain"
                                                                    android:gravity="left|center_vertical"
                                                                    android:paddingLeft="5dp"
                                                                    android:text="Clear selection and make a new search"
                                                                    android:textAllCaps="false"
                                                                    android:textSize="14sp"
                                                                    android:textColor="@color/colorMyWhite" />

                                                            </LinearLayout>

                                                            <RelativeLayout
                                                                android:layout_width="match_parent"
                                                                android:layout_height="match_parent"
                                                                android:layout_weight="1">

                                                                <ListView
                                                                    android:id="@+id/listViewSelectedHose"
                                                                    android:layout_width="match_parent"
                                                                    android:layout_height="match_parent"
                                                                    android:background="@color/colorMyWhite"
                                                                    android:fadeScrollbars="false"
                                                                    android:fastScrollStyle="@drawable/scrollbar_vertical_thum"
                                                                    android:scrollbarThumbVertical="@drawable/scrollbar_vertical_thum"
                                                                    android:scrollbarTrackVertical="@drawable/scrollbar_vertical_track" />

                                                                <android.support.constraint.ConstraintLayout
                                                                    android:layout_width="match_parent"
                                                                    android:layout_height="match_parent">

                                                                    <ProgressBar
                                                                        android:id="@+id/progressBar_Hose"
                                                                        style="?android:attr/progressBarStyle"
                                                                        android:layout_width="70sp"
                                                                        android:layout_height="70sp"
                                                                        android:background="@xml/progress_color"
                                                                        app:layout_constraintRight_toRightOf="parent"
                                                                        app:layout_constraintLeft_toLeftOf="parent"
                                                                        app:layout_constraintTop_toTopOf="parent"
                                                                        app:layout_constraintBottom_toBottomOf="parent"
                                                                        android:visibility="gone"/>

                                                                </android.support.constraint.ConstraintLayout>

                                                            </RelativeLayout>



                                                        </LinearLayout>

                                                    </RelativeLayout>


                                                    <ListView
                                                        android:id="@+id/listSelectMaterial"
                                                        android:background="@color/colorMySoftGray"
                                                        android:layout_width="match_parent"
                                                        android:layout_height="match_parent"
                                                        android:fadeScrollbars="false"
                                                        android:fastScrollStyle="@drawable/scrollbar_vertical_thum"
                                                        android:scrollbarTrackVertical="@drawable/scrollbar_vertical_track"
                                                        android:scrollbarThumbVertical="@drawable/scrollbar_vertical_thum"
                                                        android:layout_gravity="start"/>

                                                    <ListView
                                                        android:id="@+id/listSelectAccess"
                                                        android:background="@color/colorMySoftGray"
                                                        android:layout_width="match_parent"
                                                        android:layout_height="match_parent"
                                                        android:fadeScrollbars="false"
                                                        android:fastScrollStyle="@drawable/scrollbar_vertical_thum"
                                                        android:scrollbarTrackVertical="@drawable/scrollbar_vertical_track"
                                                        android:scrollbarThumbVertical="@drawable/scrollbar_vertical_thum"
                                                        android:layout_gravity="end"/>

                                                </android.support.v4.widget.DrawerLayout>



                                            </LinearLayout>

                                            <ListView
                                                android:id="@+id/listSelectHoseSize"
                                                android:background="@color/colorMySoftGray"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:fadeScrollbars="false"
                                                android:fastScrollStyle="@drawable/scrollbar_vertical_thum"
                                                android:scrollbarTrackVertical="@drawable/scrollbar_vertical_track"
                                                android:scrollbarThumbVertical="@drawable/scrollbar_vertical_thum"
                                                android:layout_gravity="start"/>

                                            <ListView
                                                android:id="@+id/listSelectAddOptions"
                                                android:background="@color/colorMySoftGray"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:fadeScrollbars="false"
                                                android:fastScrollStyle="@drawable/scrollbar_vertical_thum"
                                                android:scrollbarTrackVertical="@drawable/scrollbar_vertical_track"
                                                android:scrollbarThumbVertical="@drawable/scrollbar_vertical_thum"
                                                android:layout_gravity="end"/>

                                        </android.support.v4.widget.DrawerLayout>

                                    </LinearLayout>

                                    <ListView
                                        android:id="@+id/listSelectAngle"
                                        android:background="@color/colorMySoftGray"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:fadeScrollbars="false"
                                        android:fastScrollStyle="@drawable/scrollbar_vertical_thum"
                                        android:scrollbarTrackVertical="@drawable/scrollbar_vertical_track"
                                        android:scrollbarThumbVertical="@drawable/scrollbar_vertical_thum"
                                        android:layout_gravity="start"/>

                                    <ListView
                                        android:id="@+id/listSelectFittingSize"
                                        android:background="@color/colorMySoftGray"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:fadeScrollbars="false"
                                        android:fastScrollStyle="@drawable/scrollbar_vertical_thum"
                                        android:scrollbarTrackVertical="@drawable/scrollbar_vertical_track"
                                        android:scrollbarThumbVertical="@drawable/scrollbar_vertical_thum"
                                        android:layout_gravity="end"/>

                                </android.support.v4.widget.DrawerLayout>

                            </LinearLayout>

                            <ListView
                                android:id="@+id/listSelectFittingType"
                                android:background="@color/colorMySoftGray"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fadeScrollbars="false"
                                android:fastScrollStyle="@drawable/scrollbar_vertical_thum"
                                android:scrollbarTrackVertical="@drawable/scrollbar_vertical_track"
                                android:scrollbarThumbVertical="@drawable/scrollbar_vertical_thum"
                                android:layout_gravity="start"/>

                            <ListView
                                android:id="@+id/listSelectHoseType"
                                android:background="@color/colorMySoftGray"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fadeScrollbars="false"
                                android:fastScrollStyle="@drawable/scrollbar_vertical_thum"
                                android:scrollbarTrackVertical="@drawable/scrollbar_vertical_track"
                                android:scrollbarThumbVertical="@drawable/scrollbar_vertical_thum"
                                android:layout_gravity="end"/>

                        </android.support.v4.widget.DrawerLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutOrderReport_Hose"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone">
                        <include
                            layout="@layout/order_report"/>
                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/layoutZoomImage_Hose"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="start"
                        android:background="@color/colorMyWhite">

                        <ImageView
                            android:id="@+id/imgZoomImage_Hose"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="0sp"
                            android:scaleType="fitCenter" />

                        <Button
                            android:id="@+id/btnZoomImageClose_Hose"
                            android:layout_width="30sp"
                            android:layout_height="30sp"
                            android:text="@string/fa_times"
                            android:textColor="@color/colorMyMain"
                            android:padding="0sp"
                            android:textSize="20sp"
                            android:background="@color/colorMyTransparent"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true" />

                    </RelativeLayout>

                </android.support.v4.widget.DrawerLayout>


            </LinearLayout>

            <include layout="@layout/menu_content"/>

        </android.support.v4.widget.DrawerLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
