<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutOneInvoiceDetailItem_InvoiceItem"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="120sp"
    android:paddingLeft="10sp"
    android:paddingRight="10sp"
    android:paddingTop="10sp"
    android:background="@color/colorMySoftGray"
    android:weightSum="100">

    <TextView
        android:id="@+id/txtTablePartN_MyAccountInvoice"
        android:layout_width="0sp"
        android:layout_height="match_parent"
        android:text="Part N&#176;"
        android:textColor="@color/colorMyBlack"
        android:textSize="14sp"
        android:paddingLeft="5sp"
        android:gravity="left|top"
        android:layout_weight="20"/>

    <TextView
        android:id="@+id/txtTableDescription_MyAccountInvoice"
        android:layout_width="0sp"
        android:layout_height="match_parent"
        android:text="Description"
        android:textColor="@color/colorMyBlack"
        android:textSize="14sp"
        android:paddingLeft="5sp"
        android:gravity="left|top"
        android:layout_weight="35"/>

    <TextView
        android:id="@+id/txtTableQty_MyAccountInvoice"
        android:layout_width="0sp"
        android:layout_height="match_parent"
        android:text="Qty"
        android:textColor="@color/colorMyBlack"
        android:textSize="14sp"
        android:paddingLeft="5sp"
        android:gravity="left|top"
        android:layout_weight="8"/>

    <TextView
        android:id="@+id/txtTablePrice_MyAccountInvoice"
        android:layout_width="0sp"
        android:layout_height="match_parent"
        android:text="Price"
        android:textColor="@color/colorMyBlack"
        android:textSize="14sp"
        android:paddingLeft="5sp"
        android:gravity="left|top"
        android:layout_weight="17"/>

    <TextView
        android:id="@+id/txtTableSubtotal_MyAccountInvoice"
        android:layout_width="0sp"
        android:layout_height="match_parent"
        android:text="Subtotal"
        android:textColor="@color/colorMyBlack"
        android:textSize="14sp"
        android:paddingLeft="5sp"
        android:gravity="left|top"
        android:layout_weight="20"/>


</LinearLayout>