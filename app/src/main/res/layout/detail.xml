<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_Detail"
    android:layout_width="match_parent"
    android:layout_height="330dp"
    android:orientation="vertical"
    android:weightSum="100"
    android:background="@color/colorMyWhite">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_marginTop="10sp"
        android:layout_weight="60"
        android:background="@color/colorMySoftGray"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5sp"
            android:layout_marginLeft="30sp"
            android:layout_marginRight="30sp"
            android:layout_marginTop="5sp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtProductName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="5sp"
                android:lineSpacingMultiplier="1.2"
                android:text="TextView"
                android:textColor="@color/colorMyBlack"
                android:textSize="12sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="40sp"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/btnImage_left"
                        style="@android:style/Widget.DeviceDefault.Button.Borderless"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/colorMyWhite"
                        android:gravity="left|center_vertical"
                        android:paddingLeft="5sp"
                        android:text="@string/fa_angle_left"
                        android:textColor="@color/colorMyDarkGray"
                        android:textSize="36sp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                    <TextView
                        android:id="@+id/txtImageNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorMyBlack"
                        android:gravity="center"
                        android:text="0/0"
                        android:padding="3sp"
                        android:background="@color/colorMyTransparent"
                        android:textSize="10sp" />



                </RelativeLayout>



                <ImageView
                    android:id="@+id/imageProduct"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorMyWhite"
                    android:src="@drawable/fake_image"
                    android:layout_weight="1" />

                <RelativeLayout
                    android:layout_width="40sp"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/btnImage_right"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/colorMyWhite"
                        android:gravity="right|center_vertical"
                        android:paddingRight="5sp"
                        android:text="@string/fa_angle_right"
                        android:textColor="@color/colorMyDarkGray"
                        android:textSize="36sp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                    <Button
                        android:id="@+id/btnImage_Zoom"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:background="@color/colorMyTransparent"
                        android:paddingBottom="0sp"
                        android:paddingRight="5sp"
                        android:gravity="center|right"
                        android:text="@string/fa_search_plus"
                        android:textColor="@color/colorMyDarkGray"
                        android:textSize="20sp" />
                </RelativeLayout>


            </LinearLayout>

            <TextView
                android:id="@+id/txtProductSku"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="5sp"
                android:text="PART N&#xb0;: "
                android:textColor="@color/colorMyBlack"
                android:textSize="10sp" />


        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="40"
        android:background="@color/colorMyGray">

        <LinearLayout
            android:id="@+id/layoutOne_Detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="30sp"
            android:layout_marginRight="30sp"
            android:layout_marginTop="15sp"
            android:layout_marginBottom="15sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:weightSum="100">

            <Button
                android:id="@+id/btnCheck_Detail"
                style="@android:style/Widget.DeviceDefault.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_marginBottom="10sp"
                android:layout_weight="50"
                android:background="@color/colorMyDarkGray"
                android:text="Check P&amp;A"
                android:textAllCaps="false"
                android:textColor="@color/colorMyWhite"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="50"
                android:weightSum="2">

                <Button
                    android:id="@+id/btnOneClickOrder"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorMyMain"
                    android:text="1 Click Order"
                    android:layout_marginRight="10sp"
                    android:textColor="@color/colorMyWhite"
                    android:textSize="18sp"
                    android:textAllCaps="false"
                    android:textStyle="bold"/>

                <Button
                    android:id="@+id/btnAddCart"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorMyMain"
                    android:layout_marginLeft="10sp"
                    android:text="Add to Cart"
                    android:textColor="@color/colorMyWhite"
                    android:textSize="18sp"
                    android:textAllCaps="false"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutTwo_Detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="30sp"
            android:layout_marginRight="30sp"
            android:layout_marginTop="15sp"
            android:layout_marginBottom="15sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:visibility="gone"
            android:weightSum="100">

            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="50"
                android:orientation="vertical"
                android:weightSum="99">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0sp"
                    android:layout_weight="33"
                    android:background="@color/colorMyMain"
                    android:textColor="@color/colorMyWhite"
                    android:text="RRP INC GST (EA):"
                    android:textSize="12sp"
                    android:gravity="right|center_vertical"
                    android:paddingRight="5sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0sp"
                    android:layout_weight="33"
                    android:background="@color/colorMyMain"
                    android:textColor="@color/colorMyWhite"
                    android:text="YOUR PRICE +GST (EA):"
                    android:textSize="12sp"
                    android:gravity="right|center_vertical"
                    android:paddingRight="5sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0sp"
                    android:layout_weight="33"
                    android:background="@color/colorMyMain"
                    android:textColor="@color/colorMyWhite"
                    android:text="STOCK:"
                    android:textSize="12sp"
                    android:gravity="right|center_vertical"
                    android:paddingRight="5sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="35"
                android:orientation="vertical"
                android:weightSum="99">

                <TextView
                    android:id="@+id/txtRrp_Detail"
                    android:layout_width="match_parent"
                    android:layout_height="0sp"
                    android:layout_weight="33"
                    android:background="@color/colorMyBlack"
                    android:textColor="@color/colorMyWhite"
                    android:text="$872.77"
                    android:textSize="16sp"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="5sp"/>

                <TextView
                    android:id="@+id/txtProductPrice"
                    android:layout_width="match_parent"
                    android:layout_height="0sp"
                    android:layout_weight="33"
                    android:background="@color/colorMyBlack"
                    android:textColor="@color/colorMyGreen"
                    android:text="$658.28"
                    android:textSize="24sp"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="5sp"/>

                <TextView
                    android:id="@+id/txtProductStock"
                    android:layout_width="match_parent"
                    android:layout_height="0sp"
                    android:layout_weight="33"
                    android:background="@color/colorMyBlack"
                    android:textColor="@color/colorMyWhite"
                    android:text="Call fro availability"
                    android:textSize="12sp"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="5sp"/>
            </LinearLayout>

            <Button
                android:id="@+id/btnClose_Detail"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="15"
                android:background="@color/colorMyMain"
                android:text="@string/fa_times_circle"
                android:textColor="@color/colorMyWhite"
                android:textSize="24sp"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
